<nav class="d-flex justify-content-center align-items-center bg-white flex-wrap">
  <div class="col-md-6 col-sm-12">
    <%= image_tag "logo.png", class: "img-fluid w-25 my-2 mx-auto d-block" %>
  </div>
  <div class="col-md-6 col-sm-12">
    <div class="text-center text-uppercase" style="font-weight:semibold; font-size:13px" > Don't have an account? <%= link_to "Sign up", "/signup",  class: "text-decoration-none" %> </div>
  </div>
</nav>
<div class="mx-auto container card bg-white h-75" style="width: 35rem;margin-top: 6rem;">
  <div class="card-body">
    <h2 class="text-center pt-4" style="font-weight: bold;">Sign In</h2>
    <p class="text-center text-sm text-muted">Sign In to continue to your account.</p>
    <%= form_with model: @user, url: "/signin" do |form| %>
      <div class="form-group my-3">
        <%= form.label :email, class: "required" %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter Your Email" %>
      </div>
      <div class="form-group my-3">
        <%= form.label :password, class: "required" %>
        <%= form.password_field :password,
                              class: "form-control",
                              placeholder: "Enter Your Password" %>
      </div>
      <div class="d-flex justify-content-center my-5">
        <%= form.submit "NEXT", style: "width: 100%; height: 50px; border:none; border-radius: 5px; background-color: #5384AE; color: #FFFFFF;" %>
      </div>
    <% end %>
  </div>
</div>
<div class="d-flex flex-row my-5 justify-content-center align-items-center text-muted mx-auto" style="width: 35rem;">
  <hr class="w-100 mx-2" style="height: 2px; background-color: black"/>
  <span class="text-center text-sm mx-2">Or</span>
  <hr class="w-100 mx-2" style="height: 2px; background-color: black"/>
</div>
<div class=" justify-content-center align-items-center text-muted mx-auto" style="width: 35rem;">
  <%= form_tag "/auth/google_oauth2" , method: :post do %>
    <button class="btn btn-outline-dark d-flex flex-row justify-content-center align-items-center mx-auto shadow-sm border" style=" height: 50px; border:none; border-radius: 5px; background-color: #FFFFFF; color: #000000;">
      <%= image_tag "google.png", class: "img-fluid my-2 mx-auto d-block", style: "width: 30px; height: 30px;" %>
      <span class="text-center text-sm px-5 text-muted">Sign in with Google</span>
    </button>
  <% end %>
</div>
