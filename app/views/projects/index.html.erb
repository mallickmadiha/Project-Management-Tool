<div class="d-flex justify-content-between align-items-center flex-wrap p-1 text-white px-lg-2" style="background-color: #256188">
  <%= link_to root_path, class:"text-white" do %>
    <div class="text-center" style="font-weight:bold; font-size: 20px" ><i class="fa fa-sharp fa-light fa-gears mx-2"></i> ProjectTracker </div>
  <% end %>
  <div><i class="fa fa-solid fa-user mx-2"></i> <%= current_user.username %>
    <%= link_to "/logout", method: :post do %>
      <i class="fa fa-solid fa-right-from-bracket mx-3" style="color:#fff"></i>
    <% end %>
  </div>
</div>
<nav class="d-flex justify-content-around align-items-center bg-white flex-wrap p-3">
  <div class="text-center" style="font-weight:semibold; font-size: 20px" >Projects </div>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModalCenter">
    <i class="fa-solid fa-plus"></i> Create Project
  </button>
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
          <button style="border: none;background: transparent;" id="modal-close-btn">
            <i class="fa fa-sharp fa-light fa-circle-xmark fa-xl"
              data-dismiss="modal" aria-label="Close" style="color: #ff4d4d;"></i>
          </button>
        </div>
        <div class="modal-body">
          <%= render 'form', project: @project %>
        </div>
      </div>
    </div>
  </div>
</nav>
<div class="container">
  <h3 class="text-center mt-4">All Projects</h3>
  <div class="row mb-3" id="projects-display">
    <% @projects.order(id: :desc).each do |project| %>
      <div class="col-md-4">
        <div class="card my-3">
          <div class="card-header text-dark d-flex justify-content-end">
            <a href="projects/<%= project.id %>/adduser" style="color:black;"><i class="fa fa-solid fa-user-plus mx-2 mt-1"></i></a>
            <i class="fa fa-duotone fa-lock mx-2 mt-1"></i>
            <a href="/projects/<%= project.id %>" target="_blank" style="color:black;">
              <i class="fa fa-solid fa-up-right-from-square mx-2"></i>
            </a>
          </div>
          <a href="/projects/<%= project.id %>" target="_blank" style="cursor:pointer;">
            <div class="card-body">
              <h5 class="card-title text-dark"><%= project.name %></h5>
              <div class="d-flex justify-content-end">
                <div class="icon-container">
                  <%= User.find(project.user_id).username[0].upcase %>
                </div>
              </div>
            </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>
