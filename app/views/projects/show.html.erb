<%= javascript_include_tag 'packs/detail_form' %>
<%= javascript_include_tag 'packs/detail' %>
<%= render "partials/topnav", project: @project, flag: true %>
<div id="notificationContainer" class="container py-1 mx-5">
  <% if current_user %>
    <% current_user.notifications.where(read: false).each do |notification| %>
      <li class="list-group-item"><%= notification.message %></li>
    <% end %>
    <div class="d-flex flex-row gap-2">
      <button class="btn btn-warning w-50 mx-auto d-block my-3" id="mark-close-button">Close</button>
      <button class="btn btn-success w-50 mx-auto d-block my-3" id="mark-read-button">Mark As Read</button>
    </div>
  <% end %>
</div>
<div class="row" id="body-row" style="background-color: #212123;">
  <%= render "partials/sidenav", project: @project, flag: true  %>
  <div class="col">
    <div class="d-flex flex-column flex-xl-row w-100 h-100">
      <%= render partial: "partials/backlog" %>
      <%= render partial: "partials/icebox"%>
      <%= render partial: "partials/currentIteration" %>
    </div>
  </div>
</div>
