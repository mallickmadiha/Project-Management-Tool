<%= render 'partials/outernav' %>
<%= render 'partials/flash' %>
<%= render 'partials/backbutton' %>
<h3 class="fw-bold text-center">Edit Profile</h3>
<div class="container card my-5 d-flex flex-row justify-content-around align-items-center flex-wrap">
  <div class="profile-container">
    <%= @user.username[0].upcase %>
  </div>
  <div class="my-4">
    <%= form_for @user, url: user_path(@user), method: :patch, remote: true, html: { class: 'profile-form' } do |f| %>
      <div class="form-group my-2">
        <%= f.label :name, class: 'fw-bold' %>
        <%= f.text_field :name, class: 'form-control', required: true %>
      </div>
      <div class="form-group my-2">
        <%= f.label :username, class: 'fw-bold' %>
        <%= f.text_field :username, class: 'form-control', required: true %>
      </div>
      <div class="form-group my-2">
        <%= f.label :email, class: 'fw-bold' %>
        <%= f.email_field :email, class: 'form-control', required: true %>
      </div>
      <hr class="line-break">
      <h4 class="fw-bold">Change Password</h4>
      <div class="form-group my-2">
        <%= f.label :new_password, 'New Password', class: 'fw-bold' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group my-2">
        <%= f.label :new_password_confirmation, 'Confirm New Password', class: 'fw-bold' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="d-flex justify-content-center">
        <%= f.submit 'Update Profile', class: 'btn edit-btn m-3' %>
      </div>
    <% end %>
  </div>
</div>
