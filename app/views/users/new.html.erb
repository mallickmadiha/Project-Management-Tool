<%= image_tag "logo.png", class: "img-fluid my-4 mx-auto d-block" , style: "width: 600px;" %>
<div class="mx-auto container card bg-white h-75" style="width: 35rem;margin-top: 4rem;">
  <div class="card-body">
    <h2 class="text-center pt-4" style="font-weight: bold;">Sign Up</h2>
    <%= form_with model: @user, url: "/signup" do |form| %>
      <div class="form-group my-3">
        <%= form.label :"UserName (Can be Of Only One Word)", class: "required" %>
        <%= form.text_field :username, class: "form-control", placeholder: "Enter Your UserName" %>
        <p class="text-danger"><%= error_messages(@user, :username) %></p>
      </div>
      <div class="form-group my-3">
        <%= form.label :"Email", class: "required" %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter Your Email" %>
        <p  class="text-danger"><%= error_messages(@user, :email) %></p>
      </div>
      <div class="form-group my-3">
        <%= form.label :"Password", class: "required" %>
        <%= form.password_field :password,
                              class: "form-control",
                              placeholder: "Enter Your Password" %>
        <p  class="text-danger"><%= error_messages(@user, :password) %></p>
      </div>
      <div class="form-group my-3">
        <%= form.label :"Confirm Password", class: "required" %>
        <%= form.password_field :password_confirmation,
                              class: "form-control",
                              placeholder: "Confirm Your Password" %>
        <p  class="text-danger"><%= error_messages(@user, :password_confirmation) %></p>
      </div>
      <div class="d-flex justify-content-center my-5">
        <%= form.submit "NEXT", style: "width: 100%; height: 50px; border:none; border-radius: 5px; background-color: #5384AE; color: #FFFFFF;" %>
      </div>
    <% end %>
  </div>
</div>
<div class="d-flex flex-row my-3 justify-content-center align-items-center text-muted mx-auto" style="width: 35rem;">
  <hr class="w-100 mx-2" style="height: 2px; background-color: black"/>
  <span class="text-center text-sm mx-2">Or</span>
  <hr class="w-100 mx-2" style="height: 2px; background-color: black"/>
</div>
<div class=" justify-content-center align-items-center text-muted mx-auto" style="width: 35rem;">
  <%= form_tag "/auth/google_oauth2" , method: :post do %>
    <button class="btn btn-outline-dark d-flex flex-row justify-content-center align-items-center mx-auto shadow-sm border" style=" height: 50px; border:none; border-radius: 5px; background-color: #FFFFFF; color: #000000;">
      <%= image_tag "google.png", class: "img-fluid my-2 mx-auto d-block", style: "width: 30px; height: 30px;" %>
      <span class="text-center text-sm px-5 text-muted">Sign up with Google</span>
    </button>
  <% end %>
  <div class="text-center text-uppercase py-3" style="font-weight:semibold; font-size:13px" > Already have an account? <%= link_to "Sign In", "/",  class: "text-decoration-none" %> </div>
</div>
